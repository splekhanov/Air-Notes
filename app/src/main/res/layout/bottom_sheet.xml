<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/air_white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/theme_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/sort_container"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:id="@+id/theme_title_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_bs_theme_24"
                app:tint="@color/black"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/theme_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="parent">

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/theme_buttons_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:cornerRadius="25dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/text_size_tinniest"
                    android:minWidth="76dp"
                    style="?attr/materialButtonOutlinedStyle"
                    app:icon="@drawable/ic_bs_light"
                    app:iconGravity="textStart"
                    app:iconSize="14dp"
                    app:cornerRadius="12dp"
                    app:iconTint="@color/black">
                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dark"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/text_size_tinniest"
                    android:minWidth="76dp"
                    style="?attr/materialButtonOutlinedStyle"
                    app:icon="@drawable/ic_bs_dark"
                    app:iconGravity="textStart"
                    app:iconSize="14dp"
                    app:cornerRadius="12dp"
                    app:iconTint="@color/black">
                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="System"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/text_size_tinniest"
                    android:minWidth="76dp"
                    style="?attr/materialButtonOutlinedStyle"
                    app:icon="@drawable/ic_bs_settings_24"
                    app:iconGravity="textStart"
                    app:iconSize="14dp"
                    app:cornerRadius="12dp"
                    app:iconTint="@color/black">
                </Button>
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sort_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/theme_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/sort_title_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_bs_sort_24"
                app:tint="@color/black"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sort_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="parent">

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/sort_buttons_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:cornerRadius="25dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/text_size_tinniest"
                    style="?attr/materialButtonOutlinedStyle"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_bs_created_24"
                    app:iconGravity="textStart"
                    app:iconSize="12dp"
                    app:iconTint="@color/black">
                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edited"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/text_size_tinniest"
                    style="?attr/materialButtonOutlinedStyle"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_bs_edited_24"
                    app:iconGravity="textStart"
                    app:iconSize="12dp"
                    app:iconTint="@color/black">

                </Button>
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>